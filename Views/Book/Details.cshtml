@model BookMgr.Models.BookViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="container mt-5">
   <div class="card">
       <div class="card-header bg-primary text-white">
           <h2>@Model.Title</h2>
       </div>
       <div class="card-body">
           <h4 class="card-title">Book Information</h4>
           <div class="row">
               <div class="col-md-6">
                   <p><strong>ISBN:</strong> @Model.ISBN</p>
                    <p><strong>Publication Date:</strong> @Model.PublicationDate.ToShortDateString()</p>
               </div>
               <div class="col-md-6">
                   <p><strong>Publisher: </strong> @Model.PublisherName</p>
               </div>
           </div>
           <h4 class="card-title mt-4">Authors</h4>
           <ul class="list-group">
                @foreach(var author in Model.Authors)
                {
                    <li class="list-group-item">
                        @author.Text
                    </li>
                }
            </ul>
       </div>
       <div class="card-footer text-right">
           <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
           <a asp-action="Index" class="btn btn-secondary">Back to List</a>
       </div> 
   </div>
</div>
